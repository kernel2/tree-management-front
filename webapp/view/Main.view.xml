<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="sap.ui.demo.treemanagement.controller.Main">
    <App>
        <Page title="Liste des Arbres">
            <content>
                <Table id="treeTable" items="{treesModel>/trees}">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Données Brutes des Arbres" level="H2"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column><Text text="ID Base"/></Column>
                        <Column><Text text="Type Emplacement"/></Column>
                        <Column><Text text="Domanialité"/></Column>
                        <Column><Text text="Arrondissement"/></Column>
                        <Column><Text text="Complément Adresse"/></Column>
                        <Column><Text text="Numéro"/></Column>
                        <Column><Text text="Adresse"/></Column>
                        <Column><Text text="ID Emplacement"/></Column>
                        <Column><Text text="Libellé Français"/></Column>
                        <Column><Text text="Genre"/></Column>
                        <Column><Text text="Espèce"/></Column>
                        <Column><Text text="Variété ou Cultivar"/></Column>
                        <Column><Text text="Circonférence (cm)"/></Column>
                        <Column><Text text="Hauteur (m)"/></Column>
                        <Column><Text text="Stade de Développement"/></Column>
                        <Column><Text text="Remarquable"/></Column>
                        <Column><Text text="Longitude"/></Column>
                        <Column><Text text="Latitude"/></Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{treesModel>idbase}"/>
                                <Text text="{treesModel>typeemplacement}"/>
                                <Text text="{treesModel>domanialite}"/>
                                <Text text="{treesModel>arrondissement}"/>
                                <Text text="{treesModel>complementadresse}"/>
                                <Text text="{treesModel>numero}"/>
                                <Text text="{treesModel>adresse}"/>
                                <Text text="{treesModel>idemplacement}"/>
                                <Text text="{treesModel>libellefrancais}"/>
                                <Text text="{treesModel>genre}"/>
                                <Text text="{treesModel>espece}"/>
                                <Text text="{treesModel>varieteoucultivar}"/>
                                <Text text="{= ${treesModel>circonferenceencm} + ' cm'}"/>
                                <Text text="{= ${treesModel>hauteurenm} + ' m'}"/>
                                <Text text="{treesModel>stadedeveloppement}"/>
                                <Text text="{treesModel>remarquable}"/>
                                <Text text="{treesModel>geoPoint2d/lon}"/>
                                <Text text="{treesModel>geoPoint2d/lat}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <Toolbar>
                    <Button
                            text="Précédent"
                            press="onPreviousPage"
                            enabled="{= ${treesModel>/currentPage} > 0 }" />
                    <Text text="{= 'Page ' + (${treesModel>/currentPage} + 1) + ' sur ' + ${treesModel>/totalPages} }" />
                    <Button
                            text="Suivant"
                            press="onNextPage"
                            enabled="{= ${treesModel>/currentPage} &lt; (${treesModel>/totalPages} - 1) }" />
                </Toolbar>
            </content>
        </Page>
    </App>
</mvc:View>
